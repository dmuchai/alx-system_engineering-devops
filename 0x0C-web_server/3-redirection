#!/bin/bash

# Update and install Nginx if not already installed
sudo apt update -y
sudo apt install -y nginx

# Create a new Nginx server block configuration for the redirection
sudo tee /etc/nginx/sites-available/redirect_site <<EOF
server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Enable the new site configuration
sudo ln -s /etc/nginx/sites-available/redirect_site /etc/nginx/sites-enabled/

# Test Nginx configuration for syntax errors
sudo nginx -t

# Reload Nginx to apply the changes
sudo systemctl reload nginx

# Print success message
echo "Redirection configured successfully!"
